{
    "compilerOptions": {
        "module": "ES2022",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "ESNext",
        "noImplicitAny": true,
        "moduleResolution": "NodeNext",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "lib": ["DOM", "ESNext"],
        "paths": {
            "*": ["node_modules/*"]
        },
    },
    "ts-node": {
        "esm": true
    },
    "include": ["*.ts"]
}
