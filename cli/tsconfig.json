{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "Node",
    "target": "ES6",
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "dist",
    "lib": ["ES2023", "DOM"],
    "esModuleInterop": true,
    "removeComments": true,
    "allowJs": true,
    // Generate d.ts files
    "declaration": true,
    // go to js file when using IDE functions like
    // "Go to Definition" in VSCode
    "declarationMap": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"]
}
